<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/nav_button_radius</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">@integer/nav_button_weight</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>